{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es5",
            "scripthost"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmitHelpers": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build/tmp",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "exclude": [
        "build",
        "node_modules",
        "test"
    ]
}